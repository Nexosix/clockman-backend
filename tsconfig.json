{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                    
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",                   
  },
  "include": ["src/**/*"],
  "exclude": ["./dist", "node_modules"]
}
